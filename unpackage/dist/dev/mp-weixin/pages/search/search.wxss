.search-page .search-cont {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.search-page .search-cont .search-input {
  flex: 1;
  height: 70rpx;
  margin-left: 60rpx;
  border-radius: 10rpx;
  border-bottom: 1px solid #eee;
}
.search-page .search-cont .search-text {
  margin-right: 40rpx;
}
.search-page .search-history {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 50rpx 30rpx 20rpx 30rpx;
}
.search-page .search-history .title {
  color: #333;
  font-weight: 700;
}
.search-page .search-history .image {
  width: 40rpx;
  height: 40rpx;
}
.search-page .search-history-data {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.search-page .search-history-data .history-item {
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: #eee;
}
.search-page .search-content {
  padding: 0 30rpx;
}
.search-page .search-content .nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 100rpx;
}
.search-page .search-content .nodata image {
  width: 300rpx;
  height: 300rpx;
}