.delicacy-content {
  position: -webkit-sticky;
  position: sticky;
  top: var(--window-top);
  z-index: 98;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  background-color: rgba(238, 238, 238, 0.6);
}
.delicacy-content .image {
  width: 20rpx;
  height: 20rpx;
}
.delicacy-content .text {
  color: #707072;
  font-size: 30rpx;
}
.delicacy-content .label {
  display: flex;
  gap: 20rpx;
}
.delicacy-content .label .sort {
  display: flex;
  align-items: center;
  gap: 5rpx;
}
.delicacy-content .filter {
  display: flex;
  align-items: center;
  gap: 5rpx;
}
.sort-popup .sort-item {
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx 20rpx;
  border-top: 1px solid #ededed;
}
.sort-popup .sort-item .text {
  color: #000;
}
.sort-popup .sort-item .text.active-class {
  color: #d49f46;
}
.filter-popup .popup-content {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  height: 700rpx;
  overflow-y: scroll;
}
.filter-popup .popup-content .item {
  padding: 0 30rpx;
}
.filter-popup .popup-content .title {
  margin-bottom: 20rpx;
}
.filter-popup .popup-content .filter-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
}
.filter-popup .popup-content .filter-btn .clear-btn,
.filter-popup .popup-content .filter-btn .finish-btn {
  flex: 1;
  border-radius: 0;
}
.filter-popup .popup-content .filter-btn .clear-btn::after,
.filter-popup .popup-content .filter-btn .finish-btn::after {
  border: 0;
  border-radius: 0;
}
.filter-popup .popup-content .filter-btn .finish-btn {
  background-color: #ffd040;
}
.filter-popup .popup-content .filter-btn .disabled {
  background-color: rgba(255, 208, 64, 0.5);
}