.prefer-content {
  margin: 30rpx 0;
}
.prefer-content .prefer-title {
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}
.prefer-scroll-view {
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
}
.prefer-scroll-view .prefer-view {
  display: inline-block;
  padding-right: 20rpx;
}
.prefer-scroll-view .prefer-view .prefer-detail {
  display: flex;
  flex-direction: column;
}
.prefer-scroll-view .prefer-view .image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.prefer-scroll-view .prefer-view .text {
  height: 45rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.prefer-scroll-view .prefer-view .name {
  font-size: 30rpx;
}
.prefer-scroll-view .prefer-view .desc {
  font-size: 28rpx;
  color: #9c9c9c;
}