.ordering-content {
  display: flex;
}
.ordering-content .type-menu {
  width: 150rpx;
  padding-bottom: 120rpx;
  background-color: #fbfbfa;
}
.ordering-content .type-menu .type-menu-scroll-view {
  height: 100%;
}
.ordering-content .type-menu .menu-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #a8a8a7;
}
.ordering-content .food-content {
  flex: 1;
  padding-bottom: 120rpx;
}
.ordering-content .food-content .title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.ordering-content .food-content .food-content-scroll-view {
  height: 100%;
}
.ordering-content .food-content .food-content-scroll-view .food-item {
  display: flex;
  margin-bottom: 10rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .food-name {
  color: #333;
  font-size: 36rpx;
  font-weight: 700;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .desc {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin: 10rpx 0;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .desc .text {
  padding: 0 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  color: #888887;
  background-color: #f1f1f0;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .sale {
  font-size: 24rpx;
  color: #888887;
  margin-bottom: 10rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .new-price {
  color: #e67e6a;
  margin-right: 40rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .total-right {
  display: flex;
  align-items: center;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .old-price {
  margin-right: 20rpx;
  color: #a0a09f;
  font-size: 24rpx;
  text-decoration: line-through;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action .total {
  display: flex;
  justify-content: center;
  width: 100rpx;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action .decrement,
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action .increment {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action .decrement {
  color: #dddddc;
  border: 1px solid #d2d2d1;
}
.ordering-content .food-content .food-content-scroll-view .food-item .food-info .total .action .increment {
  background-color: #fecf5d;
}
.ordering-content .cart-content {
  position: fixed;
  bottom: 0;
  left: 50%;
  display: flex;
  justify-content: space-between;
  transform: translate(-50%);
  width: 95%;
  height: 120rpx;
  border-radius: 40rpx;
  background-color: #000;
}
.ordering-content .cart-content .cart-total {
  display: flex;
  height: 100%;
  margin-left: 50rpx;
}
.ordering-content .cart-content .cart-total .cart-img {
  position: relative;
}
.ordering-content .cart-content .cart-total .cart-img .badge {
  position: absolute;
  top: 0;
  left: 70rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  background-color: #ff0000;
}
.ordering-content .cart-content .cart-total .image {
  width: 100rpx;
  height: 100%;
  margin-right: 30rpx;
}
.ordering-content .cart-content .cart-total .fee {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.ordering-content .cart-content .cart-total .fee .price {
  margin-bottom: 10rpx;
  color: #fff;
}
.ordering-content .cart-content .cart-total .fee .distribution {
  color: #575757;
  font-size: 26rpx;
}
.ordering-content .cart-content .cart-count {
  width: 160rpx;
  line-height: 120rpx;
  text-align: center;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.ordering-content .cart-content .cart-count .delivering {
  color: #575757;
}
.ordering-content .cart-content .cart-count .count {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  background-color: #feca00;
}